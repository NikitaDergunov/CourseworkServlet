<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>MainServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DonorServlet</servlet-name>
        <servlet-class>DonorServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>DonorServlet</servlet-name>
        <url-pattern>/DonorServlet</url-pattern>
    </servlet-mapping>
    <servlet>
    <servlet-name>MHServlet</servlet-name>
    <servlet-class>MHServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
</servlet>
    <servlet-mapping>
        <servlet-name>MHServlet</servlet-name>
        <url-pattern>/MHServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OrganServlet</servlet-name>
        <servlet-class>OrganServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrganServlet</servlet-name>
        <url-pattern>/OrganServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PatientServlet</servlet-name>
        <servlet-class>PatientServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientServlet</servlet-name>
        <url-pattern>/PatientServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Index</servlet-name>
        <jsp-file>/WEB-INF/index.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>dao</servlet-name>
        <servlet-class>OrganDao</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>dao</servlet-name>
        <url-pattern>/dao</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Organs</servlet-name>
        <jsp-file>/WEB-INF/Organ.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Organs</servlet-name>
        <url-pattern>/Organ</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Donor</servlet-name>
        <jsp-file>/WEB-INF/Donor.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Donor</servlet-name>
        <url-pattern>/Donor</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Patient</servlet-name>
        <jsp-file>/WEB-INF/Patient.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Patient</servlet-name>
        <url-pattern>/Patient</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MH</servlet-name>
        <jsp-file>/WEB-INF/MH.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>MH</servlet-name>
        <url-pattern>/MH</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:postgresql://localhost/IR2</param-value>
    </context-param>
    <context-param>
        <param-name>user</param-name>
        <param-value>postgres</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>1234</param-value>
    </context-param>
    <context-param>
        <param-name>driver</param-name>
        <param-value>org.postgresql.Driver</param-value>
    </context-param>
    <listener>
        <listener-class>
            ConList
        </listener-class>
    </listener>

</web-app>